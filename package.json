{
  "name": "@banco/web-automation-framework",
  "version": "1.0.0",
  "description": "Framework de automatización web empresarial para soluciones de testing",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run compile && npm run bundle",
    "clean": "rimraf dist",
    "compile": "tsc -p tsconfig.build.json",
    "bundle": "rollup -c config/rollup.config.js",
    "lint": "eslint 'src/**/*.ts' --fix",
    "lint:check": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "docs": "typedoc --out docs/api src/index.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint:check && npm run test",
    "security:check": "npm audit --audit-level=moderate",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "keywords": [
    "automation",
    "testing",
    "playwright",
    "web",
    "framework",
    "cucumber",
    "bdd"
  ],
  "author": "Equipo de Automatización Banco",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@playwright/test": "^1.48.0",
    "playwright": "^1.48.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0",
    "csv-parse": "^5.6.0",
    "joi": "^17.13.3",
    "lodash": "^4.17.21",
    "@types/lodash": "^4.17.13"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.24.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "typedoc": "^0.26.11",
    "ts-node": "^10.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/banco/web-automation-framework.git"
  },
  "bugs": {
    "url": "https://github.com/banco/web-automation-framework/issues"
  },
  "homepage": "https://github.com/banco/web-automation-framework#readme"
}