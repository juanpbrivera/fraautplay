{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    //  COMPILACIN PARA DISTRIBUCIN
    "outDir": "./dist",                     // Directorio de salida
    "rootDir": "./src",                     // Directorio ra铆z del c贸digo fuente
    
    //  GENERACIN DE TIPOS
    "declaration": true,                    // Generar archivos .d.ts
    "declarationMap": true,                 // Generar mapas para debugging de tipos
    "declarationDir": "./dist/types",       // Directorio para archivos de declaraci贸n
    
    //  CONFIGURACIN DE BUILD
    "removeComments": true,                 // Eliminar comentarios en producci贸n
    "sourceMap": true,                      // Mantener source maps
    "inlineSources": false,                 // No incluir fuentes en source maps
    
    //  OPTIMIZACIN
    "importHelpers": true,                  // Usar tslib para helpers
    "downlevelIteration": true,             // Mejor soporte para iteradores
    
    //  EXCLUSIONES DE BUILD
    "noEmit": false,                        // Permitir emisi贸n (override de tsconfig.json)
    "noEmitOnError": true,                  // No emitir si hay errores
    
    //  CONFIGURACIN DE MDULOS PARA DISTRIBUCIN
    "module": "ESNext",                     // Usar ESNext para mejor tree-shaking
    "target": "ES2020",                     // Target moderno pero compatible
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    
    //  RESOLUCIN DE MDULOS
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    //  PATHS (se resolver谩n en el bundle)
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@elements/*": ["elements/*"],
      "@interactions/*": ["interactions/*"],
      "@validations/*": ["validations/*"],
      "@utilities/*": ["utilities/*"],
      "@types/*": ["types/*"],
      "@session/*": ["session/*"]
    },
    
    //  TIPOS
    "types": [
      "node",
      "@playwright/test"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  
  //  ARCHIVOS A INCLUIR EN BUILD
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  
  //  ARCHIVOS A EXCLUIR DE BUILD
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**",
    "**/__mocks__/**",
    "src/**/*.stories.ts",
    "src/examples/**",
    "src/tests/**"
  ],
  
  //  CONFIGURACIN DE TS-NODE (para desarrollo)
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020"
    }
  }
}