// ============================================
// config/tsconfig.build.json - Configuración para build/distribución
// ============================================
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist",
    "rootDir": "../src",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "removeComments": false,
    "noEmit": false,
    "module": "commonjs",
    "target": "ES2022",
    "moduleResolution": "node"
  },
  "include": ["../src/**/*"],
  "exclude": [
    "../node_modules",
    "../dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/tests/**/*"
  ]
}