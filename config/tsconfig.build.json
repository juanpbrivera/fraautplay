// ============================================
// config/tsconfig.build.json - Configuración para build/distribución
// ============================================
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/types",
    "rootDir": "../src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "sourceMap": false,
    "removeComments": false,
    "noEmit": false
  },
  "include": ["../src/**/*"],
  "exclude": [
    "../node_modules",
    "../dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/tests/**/*"
  ]
}