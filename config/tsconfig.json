    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "rootDir": "../src",
    "outDir": "../dist",
    "declaration": true,
    "declarationMap": false
